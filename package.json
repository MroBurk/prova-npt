{
  "name": "v15-tinnutri",
  "private": true,
  "version": "1.0.0",
"main": "electron/main.js",
  "scripts": {
     "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
 "build": {
    "appId": "com.cartella.infermieristica",
    "productName": "Cartella Infermieristica",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "dist_electron" 
    },
    "win": {
      "target": "portable",
      "icon": "public/favicon.ico"
    }
  
  },




    
  "dependencies": {
    "@google/genai": "^1.38.0",
    "jspdf": "^2.5.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  }
}
